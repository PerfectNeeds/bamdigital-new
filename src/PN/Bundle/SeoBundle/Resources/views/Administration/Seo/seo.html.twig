<div class="panel panel-flat">
    <div class="panel-heading">
        <h6 class="panel-title"><i class="fa fa-circle text-success" id="stateColor"></i> Seo</h6>
        <div class="heading-elements tabbable">
            <ul class="nav nav-tabs nav-tabs-bottom">
                <li class="active">
                    <a href="#seo_keyword" data-toggle="tab"><i class="icon-stack-check"></i> Keyword</a>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="icon-share3"></i>
                        <span class="visible-xs-inline-block position-right"> Social media</span>
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-right">
                        <li><a href="#seo_facebook" tabindex="-1" data-toggle="tab"><i class="icon-facebook"></i> Facebook</a></li>
                        <li><a href="#seo_twitter" tabindex="-1" data-toggle="tab"><i class="icon-twitter"></i> Twitter</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
    <div class="panel-tab-content tab-content">
        <div class="tab-pane active has-padding" id="seo_keyword">
            <div class="panel panel-flat border-top-info border-bottom-info">
                <div class="panel-heading">
                    <h6 class="panel-title"><i class="fa fa-eye"></i> Snippet preview</h6>
                    <div class="heading-elements">
                        <div class="heading-btn">
                            <button type="button" class="btn btn-default" id="seoSnippetEditBtn">Edit</button>
                        </div>
                    </div>
                </div>

                <div class="panel-body">
                    <div id="seoSnippet">
                        <div id="seoSnippetPreview">
                            <div id="snippetPreviewTitle">
                                [PAGE TITLE]
                            </div>
                            <div id="snippetPreviewLink">
                                {{ app.request.getSchemeAndHttpHost() ~ app.request.getBaseURL() }}/<span id="snippetPreviewLinkSlug"></span>
                            </div>
                            <div id="snippetPreviewMetaDescription">
                                Please provide a meta description by editing the snippet below.
                            </div>
                        </div>
                        <div class="separator"></div>
                        <div class="form-group">
                            <label for="seoFocusKeyword" class="control-label">Focus Keyword</label>
                            {{ form_widget(seoForm.focusKeyword,{'attr':{'class':'form-control' ,'placeholder':'Focus Keyword'}}) }}

                        </div>
                    </div>
                    <div id="seoSnippetEdit" style="display: none;">
                        <div class="separator"></div>
                        {{ form_widget(seoForm.state,{'type':'hidden'}) }}
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="seoSnippetEditTitle" class="control-label pull-left">Title</label>
                                    <span class="label label-default lengthBadge pull-right">
                                        <span class="length">0</span> / <span>60</span>
                                    </span>
                                    {{ form_widget(seoForm.title,{'attr':{'class':'form-control countLength' ,'data-max-length':'60', 'data-preview':'snippetPreviewTitle', 'placeholder':'SEO title'}}) }}
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="seoSnippetEditSlug" class="control-label">Slug</label>
                                    {{ form_widget(seoForm.slug,{'attr':{'class':'form-control' , 'data-preview':'snippetPreviewLinkSlug', 'placeholder':'Slug'}}) }}
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label for="seoSnippetEditMetaDescription" class="control-label pull-left">
                                        Meta Description
                                    </label>
                                    <span class="label label-default lengthBadge pull-right">
                                        <span class="length">0</span> / <span>160</span>
                                    </span>
                                    {{ form_widget(seoForm.metaDescription,{'attr':{'class':'form-control countLength' ,'data-max-length':'160', 'data-preview':'snippetPreviewMetaDescription', 'placeholder':'Meta Description'}}) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-body border-top-blue">
                <div class="panel-heading">
                    <h6 class="panel-title"><i class="flaticon-list-2"></i> Analysis</h6>
                </div>
                <ul class="list-feed list-feed-solid" id="analysis">
                    <li class="border-danger" id="analysis-1">
                        No focus keyword was set for this page. If you do not set a focus keyword, no score can be calculated.
                    </li>
                    <li class="border-danger" id="analysis-2">
                        No meta description has been specified. Search engines will display copy from the page instead
                    </li>
                    <li class="border-danger" id="analysis-3">
                        The meta description is under 120 characters long. However, up to 160 characters are available.
                    </li>
                    <li class="border-danger" id="analysis-4">
                        The text contains <span id="seoContentCount">0</span> words. This is far below the recommended minimum of 300 words. Add more content that is relevant for the topic.
                    </li>
                    <li class="border-danger" id="analysis-5">
                        The focus keyword '<span class="copyFocusKeyword"></span>' does not appear in the SEO title
                    </li>
                    <li class="border-danger" id="analysis-6">
                        The length of the meta description is sufficient.
                    </li>
                    <li class="border-danger" id="analysis-7">
                        The SEO title contains the focus keyword, at the beginning which is considered to improve rankings.
                    </li>
                    <li class="border-warning" id="analysis-8">
                        The focus keyword does not appear in the URL for this page. If you decide to rename the URL
                    </li>
                    <li class="border-danger" id="analysis-9">
                        You've never used this focus keyword before.
                    </li>
                    <li class="border-danger" id="analysis-10">
                        The page title has a nice length.
                    </li>
                    <li class="border-danger" id="analysis-11">
                        The focus keyword doesn't appear in the first paragraph of the copy. Make sure the topic is clear immediately.
                    </li>
                    <li class="border-danger" id="analysis-12">
                        The keyword density is <span id="seoDensity">0.00</span>%, which is great; the focus keyword was found <span id="seoDensityTime">0</span> times.
                    </li>
                </ul>
            </div>
        </div>
        <div class="tab-pane has-padding" id="seo_facebook">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group ">
                        <label class="control-label pull-left">Title</label>
                        <span class="label label-default lengthBadge pull-right">
                            <span class="length">0</span> / <span>60</span>
                        </span>
                        <input type="text" class="form-control countLength" data-max-length="60" placeholder="Title" name="seoSocial[{{ constant("\\PN\\Bundle\\SeoBundle\\Entity\\SeoSocial::FACEBOOK") }}][title]" {% if entity.seo and entity.seo.getSeoSocialByType(constant("\\PN\\Bundle\\SeoBundle\\Entity\\SeoSocial::FACEBOOK")) %} value="{{ entity.seo.getSeoSocialByType(constant("\\PN\\Bundle\\SeoBundle\\Entity\\SeoSocial::FACEBOOK")).title }}"{% endif %}>
                        <div class="help-block">If you don't want to use the post title for sharing the post on Facebook but instead want another title there, write it here.</div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Image url</label>
                        <input type="url" class="form-control " placeholder="Image url" name="seoSocial[{{ constant("\\PN\\Bundle\\SeoBundle\\Entity\\SeoSocial::FACEBOOK") }}][imageUrl]"{% if entity.seo and entity.seo.getSeoSocialByType(constant("\\PN\\Bundle\\SeoBundle\\Entity\\SeoSocial::FACEBOOK")) %} value="{{ entity.seo.getSeoSocialByType(constant("\\PN\\Bundle\\SeoBundle\\Entity\\SeoSocial::FACEBOOK")).imageUrl }}"{% endif %}>
                        <div class="help-block">If you want to override the image used on Facebook for this post, add the URL here.</div>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        <label class="control-label pull-left">Description</label>
                        <span class="label label-default lengthBadge pull-right">
                            <span class="length">0</span> / <span>300</span>
                        </span>
                        <textarea class="form-control m-input m-input--square countLength" data-max-length="300" data-preview="snippetPreviewMetaDescription" placeholder="Description" name="seoSocial[{{ constant("\\PN\\Bundle\\SeoBundle\\Entity\\SeoSocial::FACEBOOK") }}][description]">{% if entity.seo and entity.seo.getSeoSocialByType(constant("\\PN\\Bundle\\SeoBundle\\Entity\\SeoSocial::FACEBOOK")) %}{{ entity.seo.getSeoSocialByType(constant("\\PN\\Bundle\\SeoBundle\\Entity\\SeoSocial::FACEBOOK")).description }}{% endif %}</textarea>
                        <div class="help-block">If you don't want to use the meta description for sharing the post on Facebook but want another description there, write it here.</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane has-padding" id="seo_twitter">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="control-label pull-left">Title</label>
                        <span class="label label-default pull-right lengthBadge">
                            <span class="length">0</span> / <span>60</span>
                        </span>
                        <input type="text" class="form-control countLength" data-max-length="60" placeholder="Title" name="seoSocial[{{ constant("\\PN\\Bundle\\SeoBundle\\Entity\\SeoSocial::TWITTER") }}][title]" {% if entity.seo and entity.seo.getSeoSocialByType(constant("\\PN\\Bundle\\SeoBundle\\Entity\\SeoSocial::TWITTER")) %} value="{{ entity.seo.getSeoSocialByType(constant("\\PN\\Bundle\\SeoBundle\\Entity\\SeoSocial::TWITTER")).title }}"{% endif %}>
                        <div class="help-block">If you don't want to use the post title for sharing the post on Twitter but instead want another title there, write it here.</div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Image url</label>
                        <input type="url" class="form-control" placeholder="Image url" name="seoSocial[{{ constant("\\PN\\Bundle\\SeoBundle\\Entity\\SeoSocial::TWITTER") }}][imageUrl]"{% if entity.seo and entity.seo.getSeoSocialByType(constant("\\PN\\Bundle\\SeoBundle\\Entity\\SeoSocial::TWITTER")) %} value="{{ entity.seo.getSeoSocialByType(constant("\\PN\\Bundle\\SeoBundle\\Entity\\SeoSocial::TWITTER")).imageUrl }}"{% endif %}>
                        <div class="help-block">If you want to override the image used on Twitter for this post, add the URL here.</div>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        <label class="control-label pull-left">Description</label>
                        <span class="label label-default pull-right lengthBadge">
                            <span class="length">0</span> / <span>300</span>
                        </span>
                        <textarea class="form-control m-input m-input--square countLength" data-max-length="300" data-preview="snippetPreviewMetaDescription" placeholder="Description" name="seoSocial[{{ constant("\\PN\\Bundle\\SeoBundle\\Entity\\SeoSocial::TWITTER") }}][description]">{% if entity.seo and entity.seo.getSeoSocialByType(constant("\\PN\\Bundle\\SeoBundle\\Entity\\SeoSocial::TWITTER")) %} {{ entity.seo.getSeoSocialByType(constant("\\PN\\Bundle\\SeoBundle\\Entity\\SeoSocial::TWITTER")).description }}{% endif %}</textarea>
                        <div class="help-block">If you don't want to use the meta description for sharing the post on Twitter but want another description there, write it here.</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel-footer">
        <div class="heading-elements">
            <div class="heading-btn pull-right">
                <button type="reset" class="btn bg-orange-400">Reset</button>
                <button type="submit" class="btn bg-teal-400">Save changes <i class="icon-checkmark4 position-right"></i></button>
            </div>
        </div>
    </div>
</div>