{% extends 'AdminTemplateBundle::base.html.twig' %}
{% set page_title %}Back Link List{% endset %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/admintemplate/assets/plugins/datatable/css/bootstrap.datatable.min.css') }}" rel="stylesheet">
{% endblock %}
{% block body -%}
    {% if errors is defined %}
        <div class="alert alert-danger alert-block fade in alert-dismissable">
            <button aria-hidden="true" data-dismiss="alert" class="close" type="button">Ã—</button>
            <strong>Oh snap!</strong> {{ errors }}
        </div>

    {% endif %}
    <div class="the-box">
        <div class="table-responsive">
            <div class="row">
                <div class="col-md-12">
                    <a class="btn btn-success pull-right" style="margin-bottom: 10px;" href="{{ path('backlink_new') }}">Create a new entry</a>
                </div>
            </div>
            <table class="table table-striped table-hover" id="datatable-example">
                <thead class="the-box dark full">
                    <tr>
                        <th>Id</th>
                        <th>Word</th>
                        <th>Url</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for entity in entities %}
                        <tr class="odd gradeX">
                            <td>{{ entity.id }}</td>
                            <td>{{ entity.word }}</td>
                            <td>{{ entity.link }}</td>
                            <td>
                                <a href="{{ path('backlink_edit', { 'id': entity.id }) }}" class="btn btn-info" data-toggle="tooltip" title="Edit"><i class="fa fa-pencil"></i></a>
                                <a  href="#" onclick="javascript:del({{entity.id}})" class="btn btn-danger" data-toggle="tooltip" title="Delete"><i class="fa fa-minus"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <form hidden name="delete_form" id="delete_form" action="{{ path('backlink_delete') }}" method="POST"  >
        <input type="hidden" name="id" id="entityId" />
    </form>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/admintemplate/assets/plugins/datatable/js/jquery.dataTables.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/admintemplate/assets/plugins/datatable/js/bootstrap.datatable.js') }}"></script>
    <script>
        function del(id) {
            if (confirm("Are you sure you want to delete?"))
            {
                $('#entityId').val(id);
                $('#delete_form').submit();
            }
        }
    </script>
{% endblock %}